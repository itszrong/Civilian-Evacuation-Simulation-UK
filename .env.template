# Primary Care Triage System Environment Variables
# Copy this file to .env and fill in your actual values

# ===================================
# Foundry Configuration (Required for GP OSDK)
# ===================================
# Get your token from Foundry platform after authentication
FOUNDRY_TOKEN=your_foundry_token_here

# ===================================
# OpenAI Configuration (Required for Emergency Planning AI Assistant)
# ===================================
# Used by DSPy-powered emergency response planning and chat assistant
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Alternative: Anthropic Claude (if you prefer Claude over OpenAI)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===================================
# ElevenLabs Configuration (Required for voice features)
# ===================================
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=your_preferred_voice_id_here

# ===================================
# JWT Configuration (Required for authentication)
# ===================================
JWT_SECRET=your_jwt_secret_here
JWT_SECRET_PRODUCTION=your_production_jwt_secret_here

# ===================================
# Application Configuration
# ===================================
api_key=test_api_key_7_sep
email=test@gmail.com
username=test
organizationID=myorg
projectID=project1

# ===================================
# LangFuse Configuration (Optional - for observability)
# ===================================
LANGFUSE_NEXTAUTH_SECRET=your_langfuse_nextauth_secret
LANGFUSE_SALT=your_langfuse_salt
LANGFUSE_ENCRYPTION_KEY=your_langfuse_encryption_key
LANGFUSE_DB_PASSWORD=your_langfuse_db_password

# Twilio Configuration
# Get these from your Twilio Console: https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=[YOUR_AUTH_TOKEN_HERE]

# Twilio WhatsApp Sandbox Number (or your approved WhatsApp number)
TWILIO_WHATSAPP_NUMBER=

# Twilio SMS Number (your Twilio phone number)
TWILIO_SMS_NUMBER=

# Government Contact Number (UK format E.164)
GOVERNMENT_CONTACT_NUMBER=

# API Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Optional: Graph Cache (speeds up repeated simulations)
LONDON_GRAPH_CACHE_PATH=./cache/london_graph.pkl

# CORS Configuration (frontend URLs)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Note: Copy this file to .env and replace [YOUR_AUTH_TOKEN_HERE] with your actual token
